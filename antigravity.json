{
  "project": {
    "id": "arb-tracker-v1",
    "name": "ARB Tracker",
    "version": "1.0.0",
    "stack": {
      "framework": "Next.js",
      "styling": "Tailwind CSS",
      "database": "SQLite (via Prisma)"
    },
    "integrations": {
      "context7": {
        "enabled": true,
        "apiKeyEnvVar": "CONTEXT7_API_KEY",
        "sync": {
          "strategy": "on-demand",
          "auto_enrich": true
        }
      }
    }
  },
  "blueprints": {
    "frontend": {
      "framework": "Next.js",
      "root": "apps/web",
      "style": "tailwind",
      "ui_standard": "expansive-landscape-modals",
      "components": {
        "modal": {
          "default_width": "80vw",
          "orientation": "landscape",
          "image_fit": "contain"
        }
      }
    }
  },
  "agent_behavior": {
    "role": "Lead Architect",
    "strict_mode": true,
    "browser_actions": {
      "auto_confirm": true,
      "allowed_domains": [
        "localhost",
        "127.0.0.1"
      ]
    },
    "permissions": {
      "auto_allow_javascript": [
        "http://localhost:3000",
        "http://127.0.0.1:3000"
      ],
      "trusted_domains": [
        "localhost",
        "127.0.0.1"
      ],
      "guard_policy": "Local-only auto-allow. Always 'Ask first' for non-local domains (staging/production)."
    },
    "validation_rules": {
      "require_unit_tests": true,
      "run_regression_on_change": true,
      "halt_on_test_failure": true
    },
    "interaction_mode": "unattended_safe"
  },
  "engine": {
    "type": "antigravity-v2",
    "mode": "implementation",
    "features": {
      "auto_compliance": true,
      "test_driven_generation": true,
      "continuous_testing": true
    }
  },
  "governance": {
    "arb_review_required": true,
    "compliance_standards": [
      "IFG-Life-Architecture-Standard"
    ]
  }
}